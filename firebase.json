{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "web",  
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "web/assets/manifest.json"    ],
     
    "rewrites": [
      {
        "source": "**",  
        "destination": "/index.html"
      }
    ]
  }
}